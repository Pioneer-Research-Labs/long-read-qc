{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "unique" : true,
        "errorMessage": "Sample name must be provided and must be unique",
        "meta": ["id"]
      },
      "construct": {
        "type": "string",
        "meta": ["construct"]
      },
      "file": {
          "type": "string",
          "format": "file-path",
          "exists": true,
          "unique" : true,
          "pattern": "^s3:\\/\\/pioneer-seq(uencing|center)\\/\\S*.f(ast)?q\\.gz$",
          "errorMessage": "FastQ file for reads must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
          "meta": ["fastq"]
      }
    },
    "required": ["id", "construct", "file"]
  }
}