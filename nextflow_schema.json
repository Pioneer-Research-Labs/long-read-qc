{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com///nextflow_schema.json",
  "title": " pipeline parameters",
  "description": "",
  "type": "object",
  "properties": {
    "samplesheet": {
      "type": "string",
      "format": "file-path",
      "mimetype": "text/csv",
      "schema": "/assets/samplesheet_validation_schema.json"
    },
    "cores": {
      "type": "integer",
      "default": 4,
      "hidden": true
    },
    "tech": {
      "type": "string",
      "default": "map-ont",
      "enum": ["map-ont", "map-pb", "map-iclr"]
    },
    "map_genome": {
      "type": "boolean"
    },
    "parentdir": {
      "type": "string",
      "default": "prod",
      "enum": ["prod", "dev"],
      "hidden": true
    },
    "genomes": {
      "type": "string",
      "default": "s3://pioneer-data/genomes/",
      "hidden": true
    },
    "constructs": {
      "type": "string",
      "default": "s3://pioneer-sequencing/constructs/",
      "hidden": true
    },
    "error_rate": {
      "type": "number",
      "default": 0.1,
      "hidden": true
    },
    "min_overlap": {
      "type": "integer",
      "default": 3,
      "hidden": true
    },
    "min_bc_len": {
      "type": "integer",
      "default": 20,
      "hidden": true
    },
    "max_bc_len": {
      "type": "integer",
      "default": 60,
      "hidden": true
    },
    "sourmash_db": {
      "type": "string",
      "default": "/srv/shared/databases/sourmash/gtdb-rs220-k21.zip",
      "hidden": true
    },
    "meta_ovlp": {
      "type": "integer",
      "default": 1000,
      "hidden": true
    },
    "taxonomy": {
      "type": "string",
      "default": "/srv/shared/databases/sourmash/gtdb-rs220.lineages.sqldb",
      "hidden": true
    },
    "path_prefix": {
      "type": "string",
      "hidden": true
    },
    "aws_batch": {
      "type": "boolean",
      "hidden": true
    },
    "s3_path": {
      "type": "string",
      "default": "s3://pioneer-analysis/long_read_qc/",
      "hidden": true
    },
    "outdir": {
      "type": "string",
      "hidden": true
    }
  },
  "required": ["samplesheet"]
}
