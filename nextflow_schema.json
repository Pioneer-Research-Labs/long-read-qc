{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com///nextflow_schema.json",
  "title": " pipeline parameters",
  "description": "",
  "type": "object",
  "properties": {
    "samplesheet": {
      "type": "string",
      "format": "file-path",
      "mimetype": "text/csv"
    },
    "cores": {
      "type": "integer",
      "default": 4
    },
    "tech": {
      "type": "string",
      "default": "map-ont",
      "enum": ["map-ont", "map-pb", "map-iclr"]
    },
    "map_genome": {
      "type": "boolean"
    },
    "parentdir": {
      "type": "string",
      "default": "prod",
      "enum": ["prod", "dev"]
    },
    "genomes": {
      "type": "string",
      "default": "s3://pioneer-data/genomes/"
    },
    "constructs": {
      "type": "string",
      "default": "s3://pioneer-sequencing/constructs/"
    },
    "error_rate": {
      "type": "number",
      "default": 0.1
    },
    "min_overlap": {
      "type": "integer",
      "default": 3
    },
    "min_bc_len": {
      "type": "integer",
      "default": 20
    },
    "max_bc_len": {
      "type": "integer",
      "default": 60
    },
    "sourmash_db": {
      "type": "string",
      "default": "/srv/shared/databases/sourmash/gtdb-rs220-k21.zip"
    },
    "meta_ovlp": {
      "type": "integer",
      "default": 1000
    },
    "taxonomy": {
      "type": "string",
      "default": "/srv/shared/databases/sourmash/gtdb-rs220.lineages.sqldb"
    },
    "path_prefix": {
      "type": "string"
    },
    "aws_batch": {
      "type": "boolean"
    },
    "s3_path": {
      "type": "string",
      "default": "s3://pioneer-analysis/long_read_qc/"
    },
    "outdir": {
      "type": "string",
      "hidden": true
    }
  },
  "required": ["samplesheet"]
}
