nextflow_process {

    name "Test Process summarize_barcodes"
    script "modules/summarize_barcodes/main.nf"
    process "summarize_barcodes"

    test("Should generate barcode summaries and plots") {

        when {
            params {
                outdir = outputDir
            }
            process {
                """
                input[0] = file('${projectDir}/test_data/barcode_map.tsv')
                """
            }
        }

        then {
            assert process.success
            assert process.out.size() == 2
            assert process.out[0][0].size() == 4
            assert process.out[1][0].size() == 3
            assert snapshot("$outputDir/barcode_copy_number.csv",
            "$outputDir/barcode_lengths.csv",
            "$outputDir/barcode_proportions.csv",
            "$outputDir/concatenated_barcodes.csv",
            "$outputDir/barcode_copy_number.png",
            "$outputDir/barcode_length_distribution.png",
            "$outputDir/barcode_proportions.png",
            ).match()
        }

    }

}
