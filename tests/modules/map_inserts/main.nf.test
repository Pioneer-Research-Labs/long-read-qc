nextflow_process {

    name "Test Process map_inserts"
    script "modules/map_inserts/main.nf"
    process "map_inserts"

    test("Should map inserts") {

        when {
            params {
                outdir = outputDir
            }
            process {
                """
                input[0] = Channel.fromList([ tuple( [id:'Gateway_EmptyBarcodedLib1_20241217',
                genome:'H_elongata'],
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/inserts.fasta'),
                file("s3://pioneer-data/genomes/H_elongata/H_elongata_contigs.fna".toString()))])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(
            ("$outputDir/Gateway_EmptyBarcodedLib1_20241217/mapped_insert_stats.tsv"),
            ("$outputDir/Gateway_EmptyBarcodedLib1_20241217/mapped_inserts.bam"),
            ("$outputDir/Gateway_EmptyBarcodedLib1_20241217/mapped_inserts.bam.bai"),
            ).match()
        }

    }

}
