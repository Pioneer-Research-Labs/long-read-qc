nextflow_process {

    name "Test Process get_flanks"
    script "modules/get_flanks/main.nf"
    process "get_flanks"

    test("Should get insert and barcode flanking sequences from a plasmid with annotations reversed") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = Channel.fromList([ tuple([ id:'Gateway_EmptyBarcodedLib1_20241217',
                genome:'H_elongata'],
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/c.00323.dna'))])
                """
            }
        }

        then {
            assert process.success
            assert snapshot("$launchDir/results/Gateway_EmptyBarcodedLib1_20241217/flanking.gb").match()
        }

    }
    test("Should get insert and barcode flanking sequences from a plasmid with annotation in the correct order") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = Channel.fromList([ tuple([ id:'Phal',
                genome:'P_halocryophilus'],
                file('${projectDir}/test_data/c.00215.dna'))])
                """
            }
        }

        then {
            assert process.success
            assert snapshot("$launchDir/results/Phal/flanking.gb").match()
        }

    }
}
