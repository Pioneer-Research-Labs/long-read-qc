nextflow_process {

    name "Test Process summarize_genome_coverage"
    script "modules/summarize_genome_coverage/main.nf"
    process "summarize_genome_coverage"

    test("Should generate a graphic of genome coverage") {

        when {
            params {
                outdir = outputDir
            }
            process {
                """
                 input[0] = file('${projectDir}/test_data/genome_coverage.tsv')
                """
            }
        }

        then {
            assert process.success
            assert snapshot("$outputDir/genome_coverage.png").match()
        }

    }

}
