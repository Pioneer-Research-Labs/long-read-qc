nextflow_process {

    name "Test Process seq_stats"
    script "modules/seq_stats/main.nf"
    process "seq_stats"

    test("Should generate sequencing stats") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = Channel.fromList([ tuple([ id:'Gateway_EmptyBarcodedLib1_20241217',
                genome:'H_elongata'],
                file("${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/5HKJT6_1_sample_1.fastq.gz"),
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/c.00323.dna'),
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/inserts.fasta'),
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/barcodes.fasta'))])
                """
            }
        }

        then {
            assert process.success
            assert snapshot("${launchDir}/results/Gateway_EmptyBarcodedLib1_20241217/seq_stats.tsv").match()
        }

    }

}
