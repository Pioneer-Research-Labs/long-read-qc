nextflow_process {

    name "Test Process barcode_counts"
    script "modules/barcode_counts/main.nf"
    process "barcode_counts"

    test("Should generate barcode counts"){

        when {
            params {
                outdir = outputDir
            }
            process {
                """
                input[0] = Channel.fromList([ tuple([ id:'Gateway_EmptyBarcodedLib1_20241217',
                genome:'H_elongata'],
                file('${projectDir}/test_data/Gateway_EmptyBarcodedLib1_20241217/barcodes.fasta'))])
                """
            }
        }

        then {
            assert process.success
            assert snapshot("$outputDir/Gateway_EmptyBarcodedLib1_20241217/barcode_counts.tsv").match()
        }
    }
}

