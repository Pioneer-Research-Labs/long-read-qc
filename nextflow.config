

// --- Default parameters

// sample sheet
params.samplesheet = "samplesheet.csv"

// output dir
params.outdir = "results"

// vector sequence to use for rotating and orienting reads (using rrnB terminator)
params.rotate_anchor = "TTTATCTGTTGTTTGTCGGTGAACGCTCTC"


// genome files for mapping inserts
params.ref_fa = "$HOME/shared/genomes/H_elongata/H_elongata_contigs.fna"
params.ref_gff = "$HOME/shared/genomes/H_elongata/H_elongata_genes.gff"
params.ref_bed = "$HOME/shared/genomes/H_elongata/H_elongata_genes.bed"


// barcode searching parameters
params.error_rate = 0.1
params.min_overlap = 3

// barcode searching parameters
params.min_bc_len = 20
params.max_bc_len = 60

// --- Pipeline config

conda.enabled = true


manifest.defaultBranch = 'main'